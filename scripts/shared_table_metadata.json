        "iceberg": {
          "schema": {
            "fields": [
              {"name": "cve_id", "type": "string", "required": true},
              {"name": "description", "type": "string"},
              {"name": "severity", "type": "string"},
              {"name": "cvss_score", "type": "decimal(3,1)"},
              {"name": "published_date", "type": "timestamp"},
              {"name": "last_modified_date", "type": "timestamp"},
              {"name": "affected_software_name", "type": "string"},
              {"name": "affected_version_range", "type": "string"},
              {"name": "remediation_info", "type": "string"}
            ]
          }
        }
      }
    }
  ]
}
