{
  "tables": [
    {
      "name": "threat_intelligence",
      "metadata": {
        "iceberg": {
          "schema": {
            "fields": [
              {"name": "threat_id", "type": "long", "required": true},
              {"name": "ip_address", "type": "string"},
              {"name": "domain_name", "type": "string"},
              {"name": "threat_type", "type": "string"},
              {"name": "confidence_score", "type": "decimal(3,2)"},
              {"name": "first_seen_date", "type": "timestamp"},
              {"name": "last_seen_date", "type": "timestamp"},
              {"name": "malware_family", "type": "string"},
              {"name": "source", "type": "string"}
